FROM tsfminference-gpu AS base

# we just need to add the finetuning code

USER tsfm
ARG CODEDIR
COPY --chown=tsfm:tsfm ${CODEDIR}/* ${HOME}/${CODEDIR}/
COPY --chown=tsfm:tsfm pyproject.toml ${HOME}
COPY --chown=tsfm:tsfm uv.lock ${HOME}
RUN poetry install